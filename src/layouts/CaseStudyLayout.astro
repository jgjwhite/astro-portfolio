---
import Layout from './Layout.astro';
import Navbar from '../components/shared/Navbar.astro';

interface Props {
  title: string;
  heroImage: string;
}

const { title, heroImage } = Astro.props;
---

<Layout title={title} bodyClass="case-study-page">
  <Navbar />
  <main class="mt-20" style="padding-bottom: 100px;">
    <!-- Header Section -->
    <h1 class="text-h1 text-center mb-6 md:mb-8">
      {title}
    </h1>
    <div class="relative aspect-[1200/620] w-full bg-gray-100 mb-12 sm:mb-16 md:mb-24">
      <img
        src={heroImage}
        alt={title}
        class="w-full h-full object-cover"
      />
    </div>

    <!-- Content Section -->
    <div class="[&>*:not(:last-child)]:mb-12 [&>*:not(:last-child)]:sm:mb-16 [&>*:not(:last-child)]:md:mb-24">
      <slot />
    </div>

    <!-- Next Project Section -->
    <slot name="nextProject" />
  </main>
</Layout>

<style>
  main {
    margin-left: auto;
    margin-right: auto;
  }
</style>

<style is:global>
  body {
    background-color: #ffffff !important;
  }
</style> 