---
import Layout from './Layout.astro';
import Navbar from '../components/shared/Navbar.astro';

interface Props {
  title: string;
  heroImageDesktop: string;
  heroImageMobile: string;
}

const { title, heroImageDesktop, heroImageMobile } = Astro.props;
---

<Layout title={title} bodyClass="case-study-page">
  <Navbar />
  <main class="mt-20" style="padding-bottom: 100px;">
    <!-- Header Section -->
    <h1 class="text-h1 text-center mb-6 md:mb-8">
      {title}
    </h1>
    <div class="relative w-full bg-gray-100 mb-24 sm:mb-32 md:mb-48">
      <picture>
        <source media="(max-width: 640px)" srcset={heroImageMobile}>
        <source media="(min-width: 641px)" srcset={heroImageDesktop}>
        <img
          src={heroImageDesktop}
          alt={title}
          class="w-full h-full object-cover rounded-xl"
        />
      </picture>
    </div>

    <!-- Content Section -->
    <div class="[&>*:not(:last-child)]:mb-24 [&>*:not(:last-child)]:sm:mb-32 [&>*:not(:last-child)]:md:mb-48">
      <slot />
    </div>

    <!-- Next Project Section -->
    <slot name="nextProject" />
  </main>
</Layout>

<style>
  main {
    margin-left: auto;
    margin-right: auto;
  }
</style>

<style is:global>
  body {
    background-color: #ffffff !important;
  }
</style> 