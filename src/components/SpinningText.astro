<div class="spinning-text-container pointer-events-none">
  <svg
    id="spinning-text"
    width="100"
    height="100"
    viewBox="0 0 100 100"
    class="absolute hidden md:block -right-4 -top-2 md:-right-12 md:-top-16 lg:-right-16 lg:-top-16"
  >
    <defs>
      <path
        id="text-path"
        d="M50,10 A40,40 0 1,1 49.9,10"
        fill="none"
      />
    </defs>
    <text fill="#d00019" class="font-neuecorp text-[14px]">
      <textPath href="#text-path" startOffset="8">
        ðŸ‘‹ Hi, I'm Justin, thanks for visiting my site
      </textPath>
    </text>
  </svg>
</div>

<style>
  .spinning-text-container {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    z-index: 0;
  }

  #spinning-text {
    transform-origin: center;
  }
</style>

<script>
  const svg = document.getElementById('spinning-text');
  let rotation = 0;
  let ticking = false;

  function updateRotation() {
    if (!svg) return;
    
    rotation = window.scrollY * 0.4;
    svg.style.transform = `rotate(${rotation}deg)`;
    ticking = false;
  }

  window.addEventListener('scroll', () => {
    if (!ticking) {
      window.requestAnimationFrame(updateRotation);
      ticking = true;
    }
  }, { passive: true });
</script> 