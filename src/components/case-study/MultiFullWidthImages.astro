---
interface Props {
  title?: string;
  images: Array<{
    srcDesktop: string;
    srcMobile: string;
    alt: string;
    caption?: string;
  }>;
}

const { title, images } = Astro.props;
---

<div class="max-w-[960px] mx-auto">
  {title && <div class="text-h2 mb-4">{title}</div>}
  {images.map((image) => (
    <div class="[&:not(:last-child)]:mb-8">
      <picture>
        <source media="(min-width: 641px)" srcset={image.srcDesktop} />
        <img
          src={image.srcMobile}
          alt={image.alt}
          class="w-full h-auto rounded-[12px]"
          style="border: 1px solid #e5e7eb;"
        />
      </picture>
      {image.caption && (
        <p class="text-caption mt-1" style="color: #838383">
          {image.caption}
        </p>
      )}
    </div>
  ))}
</div> 